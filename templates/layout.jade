doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href=contents.css['main.css'].url)
  body(class=bodyclass)
    header.header
      div.content-wrap
        block header
          div.logo
            h1
              a(href=locals.url) Expériences Politiques
            p.description du 6 au 11 mars 2017 à Lyon

    nav.navigation
      a(class='menuitem', href='/programme/') Programme
      a(class='menuitem', href='/a-propos/') À Propos
      a(class='menuitem', href='/infos/') Infos Pratiques
      a(class='menuitem', href='/medias/') Médias
      a(class='menuitem', href='/benevoles/') Devenir Bénévole

    div#content
      div.content-wrap
        block content
          h2 Welcome to zombocom!
    footer
      div.content-wrap
        block footer
          section.about
            !=contents['about.md'].html
          section.copy
            p Expériences Politiques &mdash;&nbsp;
              a(href='/archives/') archives
              span &nbsp;&mdash;&nbsp;
              a(href='https://github.com/adngdb/experiences-politiques') sources
              span &nbsp;&mdash; powered by&nbsp;
              a(href='https://github.com/jnordberg/wintersmith') Wintersmith
              //- please leave the "powered by" if you use the design

    include tracker.html
