doctype html
block vars
  - var bodyclass = null;
  - moment.locale('fr');
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href=contents.css['main.css'].url)
  body(class=bodyclass)
    header.header
      div.content-wrap
        block header
          div.logo
            h1
              a(href=locals.url)
                img(src='/img/logo.png', alt='Expériences Politiques')
            h2 Le Festival des Alternatives Politiques !
            p.description du 5 au 10 mars 2018 à Lyon

    nav.navigation
      div.content-wrap
        ul.social
          li
            a(href='https://www.facebook.com/Experiencespo', title='Les Expériences Politiques sur Facebook')
              img(src='/img/icons/facebook.png', alt='Facebook')
          li
            a(href='https://twitter.com/expepol', title='Les Expériences Politiques sur Twitter')
              img(src='/img/icons/twitter.png', alt='Twitter')
          li
            a(href='https://www.youtube.com/channel/UCEUIMJkUmY8gANXCTZlmpWQ', title='Les Expériences Politiques sur YouTube')
              img(src='/img/icons/youtube.png', alt='YouTube')
          li
            a(href='/feed.xml', title='Suivre les actualités des Expériences Politiques')
              img(src='/img/icons/feed.png', alt='Flux RSS')
        ul.menuitem
          li
            a(href='/programme/') Programme
          li
            a(href='/a-propos/') À Propos
          li
            a(href='/infos/') Infos Pratiques
          li
            a(href='/medias/') Médias
          li
            a(href='/benevoles/') Devenir Bénévole

    div#content
      div.content-wrap
        block content
          h2 Welcome to zombocom!
    footer
      div.content-wrap
        block footer
          section.about
            !=contents['about.md'].html
          section.copy
            p Expériences Politiques &mdash;&nbsp;
              a(href='/archives/') archives
              span &nbsp;&mdash;&nbsp;
              a(href='https://github.com/adngdb/experiences-politiques') sources
              span &nbsp;&mdash; powered by&nbsp;
              a(href='https://github.com/jnordberg/wintersmith') Wintersmith
              //- please leave the "powered by" if you use the design

    include tracker.html
